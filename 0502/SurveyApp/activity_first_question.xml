<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/question1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age_question"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:labelFor="@+id/answer1EditText" />

    <EditText
        android:id="@+id/answer1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginBottom="16dp"
        android:autofillHints="age" />

    <TextView
        android:id="@+id/question2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/occupation_question"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:labelFor="@+id/answer2EditText" />

    <EditText
        android:id="@+id/answer2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:autofillHints="occupation" />

    <TextView
        android:id="@+id/question3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gender_question"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/answer3RadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/maleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male" />

        <RadioButton
            android:id="@+id/femaleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female"
            android:layout_marginStart="16dp" />

        <RadioButton
            android:id="@+id/otherRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:layout_marginStart="16dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/question4TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/residence_question"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:labelFor="@+id/answer4EditText" />

    <EditText
        android:id="@+id/answer4EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:autofillHints="addressLocality" />

    <TextView
        android:id="@+id/question5TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/housing_type_question"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:labelFor="@+id/answer5Spinner" />

    <Spinner
        android:id="@+id/answer5Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/housing_types"
        android:layout_marginBottom="24dp"
        android:prompt="@string/housing_type_question" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_gravity="end" />

</LinearLayout>