<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/question6TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/education_question"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:labelFor="@+id/answer6EditText" />

    <EditText
        android:id="@+id/answer6EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:inputType="text"
        android:autofillHints="education" />

    <TextView
        android:id="@+id/question7TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/income_question"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:labelFor="@+id/answer7EditText" />

    <EditText
        android:id="@+id/answer7EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginBottom="16dp"
        android:autofillHints="amount" />

    <TextView
        android:id="@+id/question8TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/marital_status_question"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/answer8RadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/singleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/single" />

        <RadioButton
            android:id="@+id/marriedRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/married"
            android:layout_marginStart="16dp" />

        <RadioButton
            android:id="@+id/divorcedRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/divorced"
            android:layout_marginStart="16dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/question9TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/num_family_question"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:labelFor="@+id/answer9EditText" />

    <EditText
        android:id="@+id/answer9EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginBottom="16dp"
        android:autofillHints="number" />

    <TextView
        android:id="@+id/question10TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/religion_question"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:labelFor="@+id/yesReligionCheckBox" />

    <CheckBox
        android:id="@+id/yesReligionCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yes"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/previousButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/previous"
            android:layout_marginEnd="8dp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/submit"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</LinearLayout>